<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/rl_repair"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:contextClickable="true"
                android:background="@drawable/itembgcolor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                >


                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_click"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/repair_tech"
                    />

                <TextView
                    android:layout_alignBottom="@+id/iv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机械设备报修"
                    android:textColor="@color/title"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_repair_look"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:contextClickable="true"
                android:background="@drawable/itembgcolor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_look"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/repair_tech_look"
                    />

                <TextView
                    android:layout_alignBottom="@id/iv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机械设备查看"
                    android:textColor="@color/title"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    />

            </LinearLayout>

        </LinearLayout>

            <include
                android:id="@+id/layout_input"
                layout="@layout/layout_repairintput"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/rl_5Trepair"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:contextClickable="true"
                android:background="@drawable/itembgcolor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                >


                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_click1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/repair_5t"
                    />

                <TextView
                    android:layout_alignBottom="@+id/iv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行安设备报修"
                    android:textColor="@color/title"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_5Trepair_look"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:contextClickable="true"
                android:background="@drawable/itembgcolor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iv_look1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/repair_5t_look"
                    />

                <TextView
                    android:layout_alignBottom="@id/iv_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行安设备查看"
                    android:textColor="@color/title"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>

        </LinearLayout>
            <include
                android:id="@+id/layout_5Tinput"
                layout="@layout/layout_repair5tintput"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>