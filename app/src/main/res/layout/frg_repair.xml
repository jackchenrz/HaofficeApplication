<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rl_repair"
                android:layout_margin="5dp"
                android:contextClickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dialog_button_pressed"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机械设备报修"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/iv_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/minus_index"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <include
                android:id="@+id/layout_input"
                layout="@layout/layout_repairintput"/>
            <RelativeLayout
                android:id="@+id/rl_5Trepair"
                android:contextClickable="true"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dialog_special_normal"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行安设备报修"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/iv_click1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/minus_index"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <include
                android:id="@+id/layout_5Tinput"
                layout="@layout/layout_repairintput"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>