<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/ll_off_search"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:contextClickable="true"
                    android:background="@drawable/itembgcolor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/iv_click"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/push"
                        />

                    <TextView
                        android:id="@+id/tv_off_search"
                        android:layout_alignBottom="@+id/iv_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="段发公文查询"
                        android:textColor="@color/title"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_doc_search"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:contextClickable="true"
                    android:background="@drawable/itembgcolor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/iv_look"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/logo_uidemo"
                        />

                    <TextView
                        android:id="@+id/tv_doc_search"
                        android:layout_alignBottom="@id/iv_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上级文电查询"
                        android:textColor="@color/title"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        />

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/layout_search"
                layout="@layout/layout_off_search"/>

</LinearLayout>
        </ScrollView>

</LinearLayout>