<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_use_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/darkwhite"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="使用部门："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_use_dept"
            style="@style/spinner_style"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:animationCache="true"
            android:drawSelectorOnTop="true" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />
    <LinearLayout
        android:id="@+id/ll_repair_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/darkwhite"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="维修部门："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_repair_dept"
            style="@style/spinner_style"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:animationCache="true"
            android:drawSelectorOnTop="true" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />

    <LinearLayout
        android:id="@+id/ll_eqpt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/darkwhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="设备名称："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_eqpt_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />

    <LinearLayout
        android:id="@+id/ll_fault_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/darkwhite"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="故障状态："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_fault_state"
            style="@style/spinner_style"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:paddingTop="0dip"
            android:paddingBottom="0dip"
            android:animationCache="true"
            android:drawSelectorOnTop="true" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />
    <LinearLayout
        android:id="@+id/ll_fault_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/darkwhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="故障时间："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_fault_time"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />

    <LinearLayout
        android:id="@+id/ll_fault_time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/darkwhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="至："
            android:textColor="#50bcff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_fault_time1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line"
        />
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="查询"
        android:textColor="@color/white"
        android:background="@drawable/long_button" />
</LinearLayout>